{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "strictPropertyInitialization": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "pretty": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "paths": {
      "@/components/atoms/*": ["./src/atoms/*"],
      "@/components/blocks/*": ["./src/blocks/*"],
      "@/context/*": ["./src/context/*"],
      "@/components/*": ["./src/components/*"],
      "@/app/*": ["./src/app/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/config/*": ["./src/config/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/services/*": ["./src/services/*"],
      "@/public/*": ["./public/*"],
      "@/utility/*": ["./src/utility/*"]
    }
  },
  "exclude": [
    "node_modules",
    "acceptance-tests",
    "webpack",
    "jest",
    "babel.config.js"
  ],
  "include": ["init.d.ts", "src/**/*.ts", "src/**/*.tsx", "config"]
}
